<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    card_view:cardBackgroundColor="@color/background_card"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/top_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_card"
            android:layout_marginTop="@dimen/margin_top_card"
            android:src="@drawable/ic_fitness_center_black_24dp" />

        <View
            android:id="@+id/separator"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/top_icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/top_icon"
            android:layout_alignTop="@+id/top_icon"
            android:layout_marginLeft="@dimen/margin_left_card"
            android:layout_toRightOf="@+id/separator"
            android:gravity="center"
            android:text="Комунальне Господарство"
            android:textColor="@android:color/black"
            android:textSize="@dimen/title_card"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/like_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_thumb_up_black_24dp" />


        <TextView
            android:id="@+id/likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/like_icon"
            android:layout_alignRight="@id/top_icon"
            android:layout_alignTop="@id/like_icon"
            android:layout_marginLeft="@dimen/margin_small_left_card"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/card_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/margin_top_card"
            android:singleLine="true"
            android:text="вул. Б.Кротова, 22, Дніпропетровськ"
            android:textColor="@color/card_text_color" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/likes_count"
            android:layout_alignLeft="@+id/title"
            android:layout_alignTop="@id/likes_count"
            android:gravity="center"
            android:text="Лют. 09, 2016"
            android:textColor="@color/card_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/likes_count"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/likes_count"
            android:layout_marginRight="@dimen/margin_right_card"
            android:gravity="center"
            android:text="7 днів"
            android:textColor="@color/card_text_color"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>